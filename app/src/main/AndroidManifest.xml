<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.c196aloufi">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Term Scheduler"
        android:supportsRtl="true"
        android:theme="@style/Theme.C196Aloufi"
        tools:targetApi="31">

        <activity
            android:name=".UserInterface.AddCourse"
            android:exported="false" />

        <activity
            android:name=".UserInterface.AddTerm"
            android:exported="false" />

        <activity
            android:name=".UserInterface.AssessmentsList"
            android:exported="false" />

        <activity
            android:name=".UserInterface.CourseList"
            android:exported="false" />

        <activity android:name=".UserInterface.DetailedTerm"
            android:exported="false" />
        <activity
            android:name=".UserInterface.TermList"
            android:parentActivityName=".UserInterface.MainActivity"
            android:exported="false" />
        <activity
            android:name=".UserInterface.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>