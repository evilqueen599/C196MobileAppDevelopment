<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/purple_700"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp">

        <TextView
            android:id="@+id/termTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Line 1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/termTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/termTxt"
            android:text="Line 2"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/termEditFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:fabSize="mini"
            android:clickable="true"
            android:onClick="onClickEditTerm"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            android:focusable="true" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/termDeleteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/termEditFab"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            app:fabSize="mini"
            android:onClick="onClickDeleteTerm"
            app:srcCompat="@drawable/ic_baseline_delete_outline_24"
            android:focusable="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>